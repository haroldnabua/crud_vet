    <?php 
    include "connect.php";
    $books = mysqli_query($conn, "SELECT * FROM books");
    $grand = 0;

    while($row = mysqli_fetch_array($books)) :
        $total = $row['Price'] * $row['Quantity'];
        $grand += $total;
    ?>

    <tr>
        <td><?= $row['ISBN'] ?></td>
        <td><?= $row['Title'] ?></td>
        <td><?= $row['Copyright'] ?></td>
        <td><?= $row['Edition'] ?></td>
        <td><?= $row['Price'] ?></td>
        <td><?= $row['Quantity'] ?></td>
        <td><?= $total ?></td>
    </tr>

    <?php endwhile; ?>
</table>

<h3>GRAND TOTAL: <?= $grand ?></h3>

